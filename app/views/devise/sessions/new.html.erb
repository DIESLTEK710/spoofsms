<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">We are in Beta Mode</h1>
            <h5 class="text-center login-title">Imagine sending anonymous SMS to your friends?</h5>
            <div class="account-wall">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: 'Username or Email' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
                <%= f.submit "Login", class: 'btn btn-lg btn-primary btn-block' %>
                <% end %>
            </div>
            <%= link_to "Create an account", new_registration_path(resource_name) %>
        </div>
    </div>
</div>
