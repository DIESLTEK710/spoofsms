<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
          <center><%= image_tag('logo.png') %></center>
            <h1 class="text-center login-title">We are in Beta Mode</h1>
            <h5 class="text-center login-title">Imagine sending anonymous SMS to your friends?</h5>

            <div class="account-wall">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <%= f.text_field :login, autofocus: true, class: 'form-control', placeholder: 'Username or Email' %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %></br>
                <div class="form-group">
                <%= f.submit "Login", class: 'btn btn-lg btn-primary btn-block' %>
              </div>
                <% end %>
            </div>
            <center>
              <%= link_to "Create an account", new_registration_path(resource_name) %></br>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %></br>
            <%= link_to 'Acceptable Use Policy', pages_acceptable_use_policy_path, :target => '_blank' %> 
            <%= link_to 'Terms of Service', pages_terms_of_service_path, :target => '_blank' %>
          </center>
        </div>
    </div>
</div>
