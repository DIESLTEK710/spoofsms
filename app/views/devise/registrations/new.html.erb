<div class="container">
    <div class="row">
        <h3 class="col-sm-offset-3 col-sm-6">Welcome to YouSpoof.Us</h3>
    </div
    <div class="row">
        <div class="col-sm-offset-1 col-sm-2">
        </div>
        <div class="col-sm-6">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
                <div class="row">
                    <div class="col-xs-6 col-md-6">
                      <%= f.text_field :first_name, class: 'form-control input-lg', placeholder: 'First name' %>
                    </div>
                    <div class="col-xs-6 col-md-6">
                        <%= f.text_field :last_name, class: 'form-control input-lg', placeholder: 'Last name' %>
                      </div>
                      <div class="col-xs-12 col-md-12">
                          <%= f.text_field :username, class: 'form-control input-lg', placeholder: 'Username' %>
                        </div>
                </div>
                <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'Your email address' %><%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Enter Password' %><%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg', placeholder: 'Confirm Password' %>
                    <br />
                <span class="help-block">By clicking Create my account, you agree to our <%= link_to 'Terms of Service', pages_terms_of_service_path, :target => '_blank' %> and that you have read our <%= link_to 'Acceptable Use Policy', pages_acceptable_use_policy_path, :target => '_blank' %>, including our Cookie Use.</span>
                <%= f.submit "Create my account", class: 'btn btn-lg btn-primary btn-block signup-btn' %>
            <% end %>
        </div>
      </div>
    </div>
</div>
