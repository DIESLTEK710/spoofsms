<h3>Spoof a SMS</h3>

<% if user_signed_in? %>
<%= form_for(@spoof) do |f| %>
<% if @spoof.errors.any? %>
<ul>
<% @spoof.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
<% end %>
  <%= f.text_field :body %>
  <%= f.button 'Send', class: 'btn btn-small btn-warning' %>
<% end %>
<% else %>
<%= link_to 'Login', new_user_session_path %>
<% end %>

<% @spoofs.each do |s| %>
  <li><%= s.body %></li>
<% end %>
